<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="#0A655C"
    android:layout_margin="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/recyclerview_IMG_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_launcher_background"/>
        <TextView
            android:id="@+id/recyclerview_LBL_licenseNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerview_IMG_image"
            android:text="licenseNumber: "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/recyclerview_LBL_manufacture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerview_LBL_licenseNumber"
            android:text="manufacture: "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/recyclerview_LBL_manufactureYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerview_LBL_manufacture"
            android:text="manufactureYear"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/recyclerview_LBL_modelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerview_LBL_manufactureYear"
            android:text="modelName"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/recyclerview_LBL_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerview_LBL_modelName"
            android:text="color"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/recyclerview_LBL_finishLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerview_LBL_color"
            android:text="finishLevel"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/recyclerview_LBL_currentOwnership"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerview_LBL_finishLevel"
            android:text="currentOwnership"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>